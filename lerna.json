{
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular-all",
      "exact": true,
      "message": "chore(release): publish"
    }
  },
  "publish": {
    "access": "public",
    "allowBranch": "main",
    "ignoreChanges": ["CHANGELOG.md"]
  },
  "stream": true,
  "concurrency": 1,
  "npmClient": "yarn",
  "packages": ["."]
}
